<table class="table table-bordered table-hover">
  <thead class="table-primary">
  <tr>
    <th scope="col">Service</th>
    <th scope="col">Quantity</th>
    <th scope="col">Discount (%)</th>
    <th scope="col">Total Price</th>
    <th scope="col">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% if @combos.present? %>
    <% @combos.each do |combo| %>
      <tr>
        <td><%= combo.service.name %></td>
        <td><%= combo.quantity %></td>
        <td><%= combo.discount %></td>
        <td><%= combo.total_price %></td>
        <td>
          <div class="btn-group" role="group">
            <%= link_to "View", combo_path(combo), class: "btn btn-info btn-sm me-2" %>
            <%= link_to "Edit", edit_combo_path(combo), class: "btn btn-warning btn-sm me-2" %>
            <%= button_to "Delete", combo_path(combo), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
          </div>
        </td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

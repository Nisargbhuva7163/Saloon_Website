<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-header bg-info text-white">
      <h1>Combo Details</h1>
    </div>
    <div class="card-body">
      <p><strong>Service:</strong> <%= @combo.service.name %></p>
      <p><strong>Unit Price:</strong> $<%= @combo.service.price %></p>
      <p><strong>Quantity:</strong> <%= @combo.quantity %></p>
      <p><strong>Discount:</strong> <%= @combo.discount %> %</p>
      <p><strong>Total Price after Discount:</strong> $<%= @combo.total_price %></p>
    </div>
    <div class="card-footer text-end">
      <%= link_to "Edit", edit_combo_path(@combo), class: "btn btn-warning me-2" %>
      <%= link_to "Back to All Combos", new_combo_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>

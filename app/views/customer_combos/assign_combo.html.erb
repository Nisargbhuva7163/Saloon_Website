<h1>Assign Combos to Selected Customer</h1>

<h3>Selected Customer:</h3>
<ul>
  <li><strong>Name:</strong> <%= @customer.name %></li>
  <li><strong>Email:</strong> <%= @customer.email %></li>
</ul>

<%= form_with url: customer_combos_path, method: :post, local: true do |form| %>
  <!-- Hidden field to send customer_id -->
  <%= hidden_field_tag :customer_id, @customer.id %>

  <div class="mb-3">
    <% @combos.each do |combo| %>
      <div class="form-check">
        <%= check_box_tag "combo_ids[]", combo.id, false, class: "form-check-input" %>
        <%= label_tag "combo_ids_#{combo.id}", "#{combo.service.name} - Quantity: #{combo.quantity}, Discount: #{combo.discount}%", class: "form-check-label" %>
      </div>
    <% end %>
  </div>

  <%= form.submit "Assign Combos", class: "btn btn-primary mt-3" %>
<% end %>

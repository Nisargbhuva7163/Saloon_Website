<h1>Select Customers to Assign Combo</h1>

<%= search_form_for @q, url: customer_combos_path, method: :get, class: "mb-3" do |f| %>
  <div class="form-group">
    <%= f.label :name_cont, "Search Customers" %>
    <%= f.search_field :name_cont, class: "form-control", placeholder: "Enter customer name" %>
  </div>
  <%= f.submit "Search", class: "btn btn-primary mt-2" %>
<% end %>

<%= form_with url: select_customer_customer_combos_path, method: :post, local: true do |form| %>
  <table class="table table-striped mt-4">
    <thead>
    <tr>
      <th>Select</th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
    </tr>
    </thead>
    <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= form.radio_button :customer_id, customer.id %></td>
        <td><%= customer.name %></td>
        <td><%= customer.email %></td>
        <td><%= customer.phone_number %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= form.submit "Next: Assign Combo", class: "btn btn-success" %>
<% end %>











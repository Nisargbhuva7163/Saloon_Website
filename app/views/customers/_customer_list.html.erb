<h1>Services</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone Number</th>
  </tr>
  </thead>
  <tbody>
  <% if @customers.present? %>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.email %></td>
        <td><%= customer.phone_number %></td>
        <td><%= link_to 'Show', customer_path(customer) %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= button_to 'Delete', customer_path(customer), method: :delete, data:{ turbo_confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

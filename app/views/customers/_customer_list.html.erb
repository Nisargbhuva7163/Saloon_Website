<h1 class="mb-4">Customers</h1>

<table class="table table-bordered">
  <thead class="thead-dark">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone Number</th>
    <th colspan="3" class="text-center">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% if @customers.present? %>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.email %></td>
        <td><%= customer.phone_number %></td>
        <td>
          <%= link_to 'Show', customer_path(customer), class: "btn btn-info btn-sm" %>
        </td>
        <td>
          <%= link_to 'Edit', edit_customer_path(customer), class: "btn btn-warning btn-sm" %>
        </td>
        <td>
          <%= button_to 'Delete', customer_path(customer), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  <% else %>
    <tr>
      <td colspan="6" class="text-center">No customers found</td>
    </tr>
  <% end %>
  </tbody>
</table>

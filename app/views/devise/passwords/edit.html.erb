<h2 class="text-center mb-4">🔒 Change Your Password</h2>

<div class="card shadow-sm mx-auto" style="max-width: 450px;">
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mb-3">
        <%= f.label :password, "New password", class: "form-label" %>
        <% if @minimum_password_length %>
          <div class="form-text mb-1">
            (Minimum <%= @minimum_password_length %> characters)
          </div>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, "Confirm new password", class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="d-grid">
        <%= f.submit "🔁 Change My Password", class: "btn btn-success fw-bold" %>
      </div>
    <% end %>

    <div class="mt-3 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

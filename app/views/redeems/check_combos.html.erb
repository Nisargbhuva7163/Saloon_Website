<h1>Available Combos for <%= @customer.name %></h1>

<% if @combos.any? %>
  <table class="table table-striped mt-4">
    <thead>
    <tr>
      <th>Service Name</th>
      <th>Total Quantity</th>
      <th>Remaining Quantity</th>
      <th>Discount (%)</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @customer_combos.each do |cc| %>
      <% customer_combo = cc.combo.service.name %>
      <% total_redeemed = cc.redeems.count %>
      <% remaining = cc.combo.quantity - total_redeemed %>

      <tr>
        <td><%= customer_combo %></td>
        <td><%= cc.combo.quantity %></td>
        <td><%= remaining %></td>
        <td><%= cc.combo.discount %></td>
        <td>
          <% if remaining > 0 %>
            <%= button_to "Redeem", redeem_combo_redeems_path(customer_combo_id: cc.id, customer_id: @customer.id), method: :post, class: "btn btn-primary" %>
          <% else %>
            <span class="text-danger">No remaining quantity</span>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p>No combos found for this customer.</p>
  <%= link_to "Back", check_combos_redeems_path %>
<% end %>

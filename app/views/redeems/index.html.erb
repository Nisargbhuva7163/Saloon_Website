<h1>Select a Customer</h1>

<%= form_with url: select_customer_redeems_path, method: :post, local: true do |form| %>
  <table class="table">
    <thead>
    <tr>
      <th>Select</th>
      <th>Customer Name</th>
      <th>Email</th>
      <th>Phone Number</th>
    </tr>
    </thead>
    <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <!-- Radio button for selecting a customer -->
        <td><%= radio_button_tag :customer_id, customer.id %></td>
        <td><%= customer.name %></td>
        <td><%= customer.email %></td>
        <td><%= customer.phone_number %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= form.submit "Next", class: "btn btn-primary" %>
<% end %>

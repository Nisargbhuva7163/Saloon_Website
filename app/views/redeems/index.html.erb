<h1 class="mb-4 text-center">Select Customer to Redeem Combo</h1>

<div class="card shadow-lg">
  <div class="card-header bg-primary text-white">
    <h3 class="mb-0">Customer List</h3>
  </div>

  <div class="card-body">
    <%= form_with url: select_customer_redeems_path, method: :post, local: true do |form| %>
      <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
        <tr>
          <th>Select</th>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
        </tr>
        </thead>
        <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td>
              <%= form.radio_button :customer_id, customer.id, checked: (customer.id == params[:customer_id].to_i), class: "form-check-input" %>
            </td>
            <td><%= customer.name %></td>
            <td><%= customer.email %></td>
            <td><%= customer.phone_number %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center">
        <%= form.submit "Next: Check Combos", class: "btn btn-success btn-lg mt-3" %>
      </div>
    <% end %>
  </div>
</div>
